
<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="Update checks">

        <SwitchPreferenceCompat
                app:key="update"
                app:defaultValue="true"
                app:title="Check for timetable updates"/>

        <CheckBoxPreference
                app:key="allow_wifi"
                app:title="Allow using WiFi to check for updates"/>

        <CheckBoxPreference
                app:key="allow_data"
                app:title="Allow using mobile data to check for updates"/>

        <com.example.hwutimetable.TimePreference
                app:key="time_preference"
                app:title="Update time"
                app:summary="Time summary"
                app:defaultValue="90"/>
    </PreferenceCategory>
</PreferenceScreen>
