<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
            android:id="@+id/remove_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/course_name"
            app:layout_constraintBottom_toBottomOf="@id/course_name"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_cross_grey"
            android:contentDescription="@string/delete_course"/>
</androidx.constraintlayout.widget.ConstraintLayout>