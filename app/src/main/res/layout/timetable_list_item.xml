<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/bottom_line">
        <TextView
                android:id="@+id/timetable_title"
                android:textColor="@color/textColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/timetable_list_item_side_margin"
                android:layout_marginRight="@dimen/timetable_list_item_side_margin"
                android:layout_marginTop="@dimen/timetable_list_item_top_bottom_margin"
                android:layout_marginBottom="@dimen/timetable_list_item_top_bottom_margin"
                android:layout_columnWeight="1"
                android:textSize="@dimen/list_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>