<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="Timetable View">
        <SwitchPreference
                app:title="@string/use_simplified_view_title"
                app:summary="@string/use_simplified_view_summary"
                app:key="@string/use_simplified_view"
                app:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
            app:title="Next class notifications">
        <SwitchPreference
                app:title="Receive notifications about next class"
                app:key="receive_class_notification"
                app:defaultValue="true"/>
        <com.github.hwutimetable.settings.NumberPreference
                app:key="class_notification_start"
                app:title="When to send the reminder"
                app:summary="Choose how many minutes before the class start should the reminder be sent."
                app:defaultValue="5"
                app:minValue="5"
                app:maxValue="30"
                app:step="5"/>
    </PreferenceCategory>

    <PreferenceCategory
            app:title="Update checks">

        <SwitchPreferenceCompat
                app:key="enable_updates"
                app:defaultValue="true"
                app:title="@string/enable_updates_title"/>

        <CheckBoxPreference
                app:key="allow_wifi"
                app:title="@string/allow_wifi_title"
                app:dependency="enable_updates"/>

        <CheckBoxPreference
                app:key="allow_data"
                app:title="@string/allow_mobile_data_title"
                app:dependency="enable_updates"/>

        <com.github.hwutimetable.settings.TimePreference
                app:key="time_preference"
                app:title="Update time"
                app:summary="Click here to change the update time."
                app:defaultValue="90"
                app:dependency="enable_updates"/>

        <com.github.hwutimetable.settings.NumberPreference
                app:key="frequency_preference"
                app:title="@string/update_frequency_title"
                app:summary="@string/update_frequency_summary"
                app:defaultValue="1"
                app:dependency="enable_updates"
                app:minValue="1"
                app:maxValue="14"/>

        <Preference app:title="Check for updates now"
                    app:key="@string/update_now"
                    app:summary="@string/update_now_enabled_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
            app:title="About">
        <Preference
                app:key="version"
                app:title="Build version"
                app:summary="1.0"/>
    </PreferenceCategory>
</PreferenceScreen>
